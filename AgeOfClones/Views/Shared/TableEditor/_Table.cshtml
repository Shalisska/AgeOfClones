@using AgeOfClones.Areas.Management.Models

@model ManagementTableViewModel

@{ 
    var table = Model.Table;
}

<h2>@table.TableName</h2>

<p>
    <a asp-action="@Model.CreateActionName" class="viewDialog" data-dialog-title="Создание модели">Добавить</a>
</p>

<table class="table">
    <thead>
        <tr>
            <th></th>
            @foreach (var field in table.Columns)
            {
                <th>
                    @field.Name
                </th>
            }
        </tr>
    </thead>
    <tbody>
        @if (table.Entities != null && table.Entities.Count() > 0)
        {
            Html.RenderPartial("TableEditor/_TableRow");
        }
    </tbody>
</table>
